@model Nutrition_App.Operations.Models.User.EditUserViewModel
@{
}

<div align="center">
    <h1>Change Profile Information</h1>
    <form asp-action="EditVerification" method="post" class="mb-3">
        <table class="form-table-alt">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><label asp-for="Age">Age: </label></td>
                    <td><input type="number" min="0" value="@Model.Age" step="1" asp-for="Age" class="form-control" /></td>
                    <td><span asp-validation-for="Age" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Height">Height (m): </label></td>
                    <td><input type="number" min="0.1" step="0.1" value="@Model.Height" asp-for="Height" class="form-control" /></td>
                    <td><span asp-validation-for="Height" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Weight">Weight (kg): </label></td>
                    <td><input type="number" min="0.1" step="0.1" value="@Model.Weight" asp-for="Weight" class="form-control" /></td>
                    <td><span asp-validation-for="Weight" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="Sex">Sex: </label></td>
                    <td align="center"><select asp-for="Sex" asp-items="Model.BinarySexes"></select></td>
                    <td><span asp-validation-for="Sex" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><button type="submit" class="btn btn-primary mt-2">Register</button></td>
                </tr>
            </tbody>
        </table>
    </form>
</div>


<br />
<br />
<div>
    <table align="center">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="3" align="center">@Html.ActionLink("Return to Main Page", "Index", "Home", null, new { @class = "btn btn-primary" })</td>
            </tr>
        </tbody>
    </table>
</div>
