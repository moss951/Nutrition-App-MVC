@model Nutrition_App.Operations.Models.User.LoginViewModel
@{
}

<div align="center">
    <h1>Login Page</h1>
    <form asp-action="Login" method="post" class="mb-3">
        <table align="center">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><label asp-for="Username">Username: </label></td>
                    <td><input type="text" asp-for="Username" class="form-control" /></td>
                </tr>
                <tr>
                    <td><label asp-for="Password">Password: </label></td>
                    <td><input type="text" asp-for="Password" class="form-control" /></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><button type="submit" class="btn btn-primary mt-2">Login</button></td>
                </tr>
            </tbody>
        </table>
    </form>


    @if (Model != null)
    {
        @if (Model.Succeeded == false)
        {
            <p class="error-message.active">Error. Please ensure username and password are correct.</p>
        }
    }
    else
    {
        <p class="error-message">Error. Please ensure username and password are correct.</p>
        // Such that the spacing on the page does not change.
    }
</div>


<br />
<br />
<div>
    <table align="center">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="3" align="center">@Html.ActionLink("Sign Up Here", "Registration", "User", null, new { @class = "btn btn-primary" })</td>
            </tr>
            <tr>
                <td colspan="3" align="center">@Html.ActionLink("Forgot Password?", "ForgotPassword", "User", null, new { @class = "btn btn-primary" })</td>
            </tr>
        </tbody>
    </table>
</div>