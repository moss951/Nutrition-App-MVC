@model Nutrition_App.Operations.Models.User.ForgotPasswordViewModel
@{
}

<div align="center">
<h1>Forgot Password</h1>
    <form asp-action="ForgotPassword" method="post" class="mb-3">
        <table align="center">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                        <td><label asp-for="Username">Username: </label></td>
                        <td><input type="text" asp-for="Username" class="form-control" /></td>
                </tr>
                <tr>
                    <td colspan="2" align="center"><button type="submit" class="btn btn-primary mt-2">Submit Reset Password Request</button></td>
                </tr>
            </tbody>
        </table>
    </form>


@if (Model != null)
{
    @if (Model.Succeeded == false)
    {
        <p class="error-message.active">User not found.</p>
    }
}
else
{
    <p class="error-message">User not found.</p>
    // Such that the spacing on the page does not change.
}
</div>

<br />
<br />
<div>
    <table align="center">
        <thead>
            <tr>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="3" align="center">@Html.ActionLink("Login Page", "Login", "User", null, new { @class = "btn btn-primary" })</td>
            </tr>
        </tbody>
    </table>
</div>