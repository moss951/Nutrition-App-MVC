<div class="col-md-3">
    <form asp-action="Registration" method="post" class="mb-3">
        <div class="form-group">
            <label asp-for="Username">Username: </label>
            <input type="text" asp-for="Username" class="form-control" />
            <label asp-for="Password">Password: </label>
            <input type="text" asp-for="Password" class="form-control" />
            <label asp-for="PasswordConfirm">Confirm Password: </label>
            <input type="text" asp-for="PasswordConfirm" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Height">Height: </label>
            <input type="number" step="0.1" asp-for="Height" class="form-control" />
            <label asp-for="Weight">Weight: </label>
            <input type="number" step="0.1" asp-for="Weight" class="form-control" />
            <label asp-for="BMI">BMI: </label>
            <input type="number" step="0.1" asp-for="BMI" class="form-control" />
            <label asp-for="Sex">Sex: </label>
            <input type="text" asp-for="Sex" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Register</button>
    </form>
</div>

@if (Model.IsCreated)
{
    <p>Registered user</p>
}
else
{
    <p>Failed to register</p>
}
<div asp-validation-summary="All" class="text-danger"></div>

