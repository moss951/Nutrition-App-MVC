@model Nutrition_App.Operations.Models.Goal.InsertGoalViewModel

<div class="col-md-3">
    <form asp-action="Insert" method="post" class="mb-3">
        <div class="form-group">
            <label asp-for="NutrientId">Nutrient:</label>
            <select asp-for="NutrientId" asp-items="@(new SelectList(Model.Nutrients, "Id", "Name"))">
                <option value="">Select Nutrient</option>
            </select>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>

        <div class="form-group">
            <label asp-for="Goal">Goal: </label>
            <input type="number" asp-for="Goal" class="form-control" />
            <span asp-validation-for="Goal" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Add Goal</button>
    </form>
</div>

<div class="text-center">
    <a asp-controller="Goal" asp-action="View" class="btn btn-primary">View Goals</a>
</div>