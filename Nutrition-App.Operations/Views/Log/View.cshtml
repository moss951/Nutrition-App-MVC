@model Nutrition_App.Operations.Models.Nutrients.ViewDietLogViewModel


<h1>View Diet Log</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <td>Time</td>
            <td>Food</td>
            <td>Amount(g)</td>
            <td>Action</td>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {

        <tr>
            <td>@Model.Rows[i].DietLog.DateEaten</td>
            <td>@Model.Rows[i].Food.Description</td>
            <td>@Model.Rows[i].DietLog.WeightEaten</td>
            <td>
                <a asp-controller="Log"
                   asp-action="Edit"
                   asp-route-id="@Model.Rows[i].DietLog.Id">
                    Edit
                </a>
            </td>
        </tr>
    }
</table>