@model Nutrition_App.Operations.Models.Nutrients.ViewDietLogViewModel


<h1>Diet Log</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <td>Day</td>
            <td>Food</td>
            <td>Amount(g)</td>
            <td>Action</td>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Rows.Count; i++)
    {

        <tr>
            <td>@Model.Rows[i].DietLog.DateEaten.ToShortDateString()</td>
            <td>@Model.Rows[i].Food.Description</td>
            <td>@Model.Rows[i].DietLog.WeightEaten</td>
            <td>
                <a asp-controller="Log"
                   asp-action="Edit"
                   asp-route-id="@Model.Rows[i].DietLog.Id">
                    Edit
                </a>
                <a asp-controller="Log"
                   asp-action="Delete"
                   asp-route-id="@Model.Rows[i].DietLog.Id"
                   class="text-danger ms-3">
                   Delete
                </a>

            </td>
        </tr>
    }
</table>