@model Nutrition_App.Operations.Models.Nutrients.NutrientViewModel

<h1>@Model.FoodDescription</h1>
<br />

@if (Model.Food == null) return;

<h2>Portion Sizes</h2>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <td>Description</td>
            <td>Weight</td>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Food.FoodPortions.Count; i++)
    {
        @if (Model.Food.FoodPortions[i].PortionDescription == "Quantity not specified") continue;

        <tr>
            <td>@Model.Food.FoodPortions[i].PortionDescription</td>
            <td>@Model.Food.FoodPortions[i].GramWeight g</td>
        </tr>
    }
</table>
