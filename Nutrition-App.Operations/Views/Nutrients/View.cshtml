    <div class="form-group">
        <label asp-for="WeightEaten">Amount Eaten (grams):</label>
        <input type="text" asp-for="WeightEaten" class="form-control" />
        <span asp-validation-for="WeightEaten" class="text-danger"></span>
        <input type="hidden" asp-for="FoodId" />
        <input type="hidden" asp-for="FoodDescription" />
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </div>
</form>

<h2>Nutrition Facts per @Model.WeightEaten g</h2>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <td>Nutrient</td>
            <td>Amount</td>
            <td>Unit</td>
        </tr>
    </thead>

    @for (int i = 0; i < Model.Food.FoodNutrients.Count; i++)
    {
        @if (Model.Food.FoodNutrients[i].Amount * Model.WeightEaten * 0.01 < 0.001) continue;

        <tr>
            <td>@Model.Food.FoodNutrients[i].Nutrient.Name</td>
            <td>@((Model.Food.FoodNutrients[i].Amount * Model.WeightEaten * 0.01).ToString("0.###"))</td>
            <td>@Model.Food.FoodNutrients[i].Nutrient.UnitName</td>
        </tr>
    }
</table>